{
    "compilerOptions": {
        "allowJs": true,
        "lib": ["ES2018", "DOM", "ES7"],
        "moduleResolution": "node",
        "outDir": "./built",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ES6"
    },
    "include": [
        "./Discord-Bot-Core/**/*",
        "./Discord-Bot-Core/**/*.json",
        "./handlers/**/*",
        "./handlers/**/*.json",
        "./modules/**/*",
        "./modules/**/*.json",
        "./src/**/*",
        "./*.json"
    ]
}